Extremes Tester

import java.util.Scanner;
import java.lang.*;

public class ExtremeMain
{
    public static void main(String[] args)
    {
        // Create a Scanner object
        Scanner input = new Scanner(System.in);
        
        // Create an Extremes object
        Extremes e = new Extremes();
        // Ask the user to guess the maximum value of an Integer
        System.out.println("Guess the max value: ");
        Integer g = input.nextInt();
        // Compute and display what they'd need to multiply by
        // to reach the maximum number
        Integer quotient = e.maxQuotient(g);
        System.out.println("You'd need to multiply your number by " + quotient + " to reach the min value!");
        // Ask the user to guess the minimum value of an Integer
        System.out.println("Guess the min value: ");
        g = input.nextInt();
        // Compute and display what they'd need to multiply by
        // to reach the minimum number
        quotient = e.minQuotient(g);
        System.out.println("You'd need to multiply your number by " + quotient + " to reach the min value!");

    }
}

